@model ForgotPasswordViewModel

<div class="row col-md-10 offset-md-1">
	<h1 class="text-primary text-center pt-2">Recuperar contraseña</h1>
	<form method="post" asp-controller="Account" asp-action="ForgotPassword">
		<div class="border p-2 rounded">
			<p class="text-center">Restaurar tu contraseña</p>
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Email" class="col-12">Correo electrónico</label>
				<div class="col-md-12">
					<input asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-info"></span>
				</div>
			</div>
			<div class="form-group pt-3">
				<div class="col-md-6 offset-md-3">
					<button class="btn btn-success form-control" type="submit">Recuperar</button>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}